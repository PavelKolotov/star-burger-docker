  
 nginx:
    build:
      context: ../nginx
      dockerfile: Dockerfile.nginx
    depends_on:
      - django
    ports:
      - "8081:80"
      - "4443:443"
    volumes:
      - web-data:/var/www/html
      - ../nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - letsencrypt:/etc/letsencrypt
      - static:/app/staticfiles
      - media:/app/media

 certbot:
    image: certbot/certbot
    depends_on:
      - nginx
    volumes:
      - web-data:/var/www/html
      - letsencrypt:/etc/letsencrypt
    command: certonly --webroot --webroot-path=/var/www/html --email pavelkolotov84@gmail.com --agree-tos --no-eff-email -d star-burger-docker.universal-web.online
